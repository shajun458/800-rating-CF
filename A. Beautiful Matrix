#include<bits/stdc++.h>
using namespace std ;
int main ()
{
    int n,k,i,j,r,c,x;
    int a[6][6];
    for (i=1; i<=5; i++)
    {
        for (j=1; j<=5; j++)
        {
            cin >> a[i][j];
        }

    }
    for (i=1; i<=5; i++)
    {
        for (j=1; j<=5 ; j++)
        {
            if (a[i][j] == 1)
            {
                r=i;
                c=j;
            }

        }
    }


    x= abs( r-3)+ abs (c-3);
    cout <<x<<endl;








}
