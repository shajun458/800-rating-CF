#include<bits/stdc++.h>
using namespace std;
int main ()
{
    int l,m;
    cin>>m;
    string s;
 
 
    for (int i=0; i<m; i++)
    {
        cin>>s;
        l=s.size();
        if(l<=10)
        {
            cout<<s<<endl;
 
        }
 
        else
        {
            cout<<s[0]<<l-2<<s[l-1]<<endl;
        }
 
 
    }
 
 
 
 
}
